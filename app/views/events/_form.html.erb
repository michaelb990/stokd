<!-- app/views/events/_form.html.erb -->

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event, html: {class: 'form-horizontal'}) do |f| %>
      <%= render 'shared/errors', object: @event %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :description %>
      <%= f.text_area :description%>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
